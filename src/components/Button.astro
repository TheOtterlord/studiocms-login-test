---
type Props = {
  type: 'button' | 'submit';
  stretch?: boolean;
};

const { type, stretch } = Astro.props;
---

<button class="button" class:list={[stretch && 'full']} type={type}>
  <slot />
</button>
<style>
  .button {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 40px;
    padding: .5rem .75rem;
    gap: .5rem;
    text-align: center;
    border-radius: .5rem;
    background-color: #AA87F4;
    font-weight: 500;
    font-size: .925em;
    outline: none;
    border: none;
    transition: background-color .1s ease;
    cursor: pointer;
    margin-top: .5rem;
  }

  .button:hover {
    background-color: #a07cee;
  }

  .button:active {
    background-color: #956fe9;
  }

  .full {
    width: 100%;
    display: inline-block;
  }
</style>