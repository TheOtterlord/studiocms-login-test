---
type Props = {
  label: string;
  placeholder: string;
  type: 'text' | 'password';
};

const { label, placeholder, type } = Astro.props;
---

<label for={`input-${label}`} class="input-label">
  <span class="label">{label}</span>
  <input name={`input-${label}`} id={`input-${label}`} type={type} class="input" placeholder={placeholder} />
</label>
<style>
  .input-label {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: .25rem;
  }

  .label {
    font-size: 14px;
  }

  .input {
    padding: .65rem 1rem;
    border-radius: 8px;
    border: 1px solid #29292D;
    background: #191919;
    color: white;
  }

  .input:active, .input:focus {
    border: 1px solid #aa87f4;
    outline: none;
  }
</style>